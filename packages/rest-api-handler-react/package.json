{
  "name": "@rest-api-handler/react",
  "version": "1.0.0",
  "main": "dist/index.ts",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "hooks",
    "rest",
    "api",
    "handler",
    "management",
    "flexible"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "test": "jest --config jest.config.json --env=node",
    "format": "prettier --write \"{src,__{tests,mocks}__}/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "coveralls": "yarn test --coverage && cat ./coverage/lcov.info | coveralls",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HelloPopartz/rest-api-handler.git"
  },
  "bugs": {
    "url": "https://github.com/HelloPopartz/rest-api-handler/issues"
  },
  "homepage": "https://github.com/HelloPopartz/rest-api-handler",
  "author": "Ricardo Domínguez Álvarez <r.dominguez.alvarez.dev@gmail.com>",
  "license": "MIT"
}
